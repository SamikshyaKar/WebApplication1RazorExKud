@page
@model WebApplication1RazorExKud.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Index";
}

<style>
    .btn {
        width: 75px;
    }
</style>
<h1>Employees Details</h1>

<div class="card-deck">
    @foreach (var employee in Model.Employees)
    {
        var PhotoPath = "~/Images/" + (employee.Photopath ?? "Flower5Default.jpg");

        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>

            <img class="card-img-top imageThumbnail" src="@PhotoPath"
                 asp-append-version="true" />

            <div class="card-footer text-center">
                @*<a href="#" class="btn btn-primary m-1">View</a>*@
                <a asp-page="/Employees/Details" asp-route-ID="@employee.ID" class="btn btn-primary m-1">View</a>
                @*<a asp-page="/Employee/Details" asp-route-ID="@employee.ID"
        class="btn btn-primary m-1">View</a>*@
                @*<a href="#" class="btn btn-primary m-1">Edit</a>*@
                <a asp-page="/Employees/Edit" asp-route-ID="@employee.ID" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
    


